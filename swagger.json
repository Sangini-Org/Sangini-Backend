            "content": {}
          },
          "404": {
            "description": "Images not found",
            "content": {}
          }
        }
      }
    },
    "/user/create/friendrequest":{
      "post": {
        "tags": [
          "Friend Request"
        ],
        "summary": "Sends Friend Request",
        "operationId": "createFriendRequest",
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "description": "Access token of user who want to send request",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description":"Id of user to be made friend",
          "content": {
            "application/json": {
              "schema": {
                "type":"object",
                "properties":{
                  "id":{
                    "type":"string",
                    "example":"9af37349-2573-4f7d-83d4-55745b866c08"
                  }
                }              
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Friend Request Sent",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FriendRequests"
                }
              }
            }
          }
        }
      }
    },
    "/user/update/friendrequest":{
      "put":{
        "tags": [
          "Friend Request"
        ],
        "summary": "Update Friend Request Status",
        "operationId": "updateFriendRequestStatus",
        "parameters": [
          {
            "in": "header",
            "name": "x-access-token",
            "description": "Access token of user who want to Accept/Reject/Block Request",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description":"Id of user whose request to be Accepted/Rejected/Blocked and Request Status ",
          "content": {
            "application/json": {
              "schema": {
                "type":"object",
                "properties":{
                  "id":{
                    "type":"string",
                    "description":"senderId",
                    "example":"75a43564-e5c3-499c-8858-830342d1ed47"
                  },
                  "status":{
                    "type":"integer",
                    "format": "int64",
                    "description":"Status states:\n  1 : `pending`\n  2 : `Accepted`\n  3 : `Rejected`\n  4 : `blocked`\n",               
                    "minimum": 2,
                    "maximum": 4,
                    "default": 2                    
                  }
                }              
              }
            }
          }
        },
        "responses":{
          "200": {
            "description": "Friend Request Status Altered",
            "schema": {
              "content":{

              }
            }
          },
          "404": {
            "description": "Error while updating Friend Request Status ",
            "schema": {
              "content":{

              }
            }
          }
        }
      }
    },
